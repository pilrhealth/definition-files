{
  "definition_type": "instrument",
  "name": "Move a Million Miles App",
  "description": "Move a Million Miles is a mobile app for Android and iOS that collects activity data on how many miles partipants have moved on a daily basis.",
  "code": "mmm",
  "version": 1,
  "customizations": {
    "apix": true,
    "controllers": {
      "configure": "EmaOtsConfig",
      "coordinate": "EmaOts"
    },
    "services": {
      "handleContent": "EmaOtsConfig"
    }
  },
  "settings": [
    {
      "type": "configuration_setting",
      "code": "ema_ots:ema_config",
      "name": "Configuration",
      "description": "The configuration of the content to deliver to the participant."
    }
  ],
  "datasets": [
    {
      "name": "App Log",
      "code": "pilrhealth:mobile:app_log",
      "schemas": [
        {
          "type": "concordia",
          "schemaVersion": 1,
          "name": "1.0",
          "specification": {
            "type": "object",
            "fields": [
              {
                "name": "level",
                "optional": false,
                "doc": "One of: error, warning, debug, or info.",
                "label": "Log level",
                "type": "string"
              },
              {
                "name": "tag",
                "optional": true,
                "doc": "A searchable string for event analytics.",
                "label": "Tag",
                "type": "string"
              },
              {
                "name": "msg",
                "optional": false,
                "doc": "Human readable message.",
                "label": "Message",
                "type": "string"
              },
              {
                "label": "Additional Data",
                "optional": true,
                "type": "object",
                "name": "args",
                "fields": []
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Miles Moved",
      "code": "pdnihl:mmm:miles_moved",
      "schemas": [
        {
          "type": "concordia",
          "schemaVersion": 1,
          "name": "1.0",
          "specification": {
            "fields": [
              {
                "label": "Date",
                "name": "date",
                "type": "string",
                "optional": false,
                "doc": "The effective date of the data record.",
                "category": "date"
              },
              {
                "label": "Miles moved this date",
                "name": "daily_miles",
                "type": "number",
                "optional": false,
                "doc": "Miles moved on this date."
              },
              {
                "label": "Total miles moved for campaign",
                "name": "total_miles",
                "type": "number",
                "optional": false,
                "doc": "Cumulative miles moved under this campaign."
              },
              {
                "label": "Number of daily miles data points included in total",
                "name": "total_days",
                "type": "number",
                "optional": false,
                "doc": "Total days with data under this campaign that are included in the total miles value.  Days without data are not included."
              },
              {
                "name": "entries",
                "type": "array",
                "label": "Individual data entries",
                "doc": "Individual activity entries made, contributing to the daily total.",
                "optional": true,
                "constType": {
                  "type": "object",
                  "doc": "Break each email address down into its individual components.",
                  "fields": [
                    {
                      "label": "Assessment type",
                      "name": "assessment_type",
                      "type": "string",
                      "optional": true,
                      "doc": "A tag to identify how the miles data was assessed (such as by device or manual assessment)."
                    },
                    {
                      "label": "Entry time",
                      "name": "entry_time",
                      "type": "string",
                      "optional": false,
                      "doc": "The time of the entry.",
                      "category": "date"
                    },
                    {
                      "label": "Miles moved under this entry",
                      "name": "entry_miles",
                      "type": "number",
                      "optional": false,
                      "doc": "Miles moved for this entry."
                    },
                    {
                      "label": "Motion type",
                      "name": "motion_type",
                      "type": "string",
                      "optional": true,
                      "doc": "A tag to identify what type of motion the activity was (e.g. walking, running, biking, mixed)."
                    }
                  ]
                }
              }
            ],
            "type": "object"
          }
        }
      ]
    }
  ],
  "group_categories": [
    {
      "code": "mmmcg_primary",
      "name": "MMM Challenge Groups",
      "membershipRequired": false,
      "configCategory": false,
      "statusCategory": false,
      "groups": [
        {
          "code": "team_a",
          "name": "Team A",
          "defaultGroup": true
        },
        {
          "code": "team_b",
          "name": "Team B",
          "defaultGroup": false
        },
        {
          "code": "team_c",
          "name": "Team C",
          "defaultGroup": false
        }
      ]
    }
  ]
}
